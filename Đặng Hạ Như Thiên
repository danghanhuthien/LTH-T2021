using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Bài_7
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Console.OutputEncoding = Encoding.UTF8;
            Console.Write("Nhập chỉ số điện cũ: ");
            int chiSoCu = Convert.ToInt32(Console.ReadLine());
            //sử dụng để đọc giá trị mà người dùng nhập từ bàn phím và gán nó cho biến chiSoCu kiểu int.
            Console.Write("Nhập chỉ số điện mới: ");
            int chiSoMoi = Convert.ToInt32(Console.ReadLine());
            //sử dụng để đọc giá trị mà người dùng nhập từ bàn phím và gán nó cho biến chiSoMoi kiểu int.
            int soDienTieuThu = chiSoMoi - chiSoCu;
            const double VATRate = 0.1; // Tỷ lệ thuế VAT 10%
            const double GiaBanDien = 3000; // Đơn giá điện tính theo VNĐ/kWh
            double tienDien = soDienTieuThu * GiaBanDien;
            double tienDienVAT = tienDien + (tienDien * VATRate);

            Console.WriteLine("Số điện tiêu thụ: {0}", soDienTieuThu);
            Console.WriteLine("Tiền điện: {0} VNĐ", tienDien);
            Console.WriteLine("Tiền điện (đã bao gồm VAT): {0} VNĐ", tienDienVAT);

            Console.ReadKey();
        }
    }
}
